@model EOrderProject.Models.Reports

@{
    ViewData["Title"] = "Details";
}

<!-- ======= Hero Section ======= -->
<section id="hero">

    <div class="carousel-container">
        <div class="carousel-content">

            <h2 class="animate__animated "><span>Details</span></h2>
            <div class="row bg-white p-5 rounded shadow-lg justify-content-start">

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="form-group mt-3">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name" readonly>
                    <span asp-validation-for="Name" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Surname" type="text" class="form-control" placeholder="Surname" readonly>
                    <span asp-validation-for="Surname" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Issues" type="text" class="form-control" placeholder="Issues" readonly>
                    <span asp-validation-for="Issues" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="Suggestion" type="text" class="form-control" placeholder="Suggestion" readonly>
                    <span asp-validation-for="Suggestion" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                </div>

                <div class="form-group text-center mt-4">
                    @*
                    <a class="btn btn-outline-success" style="float: right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>*@

                    <a style="float: left !important;" asp-controller="Reports" asp-action="Index" class="btn-cancel">Go Back</a>

                </div>
            </div>
        </div>
    </div>
</section>

