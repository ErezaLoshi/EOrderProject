@model IEnumerable<Staff>

@{
    ViewData["Title"] = "Home Page";
}


<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="hero-container">
        <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/assets/img/gallery/gallery-2.jpg" style="width:100%" class="img-responsive" />
                    <div class="carousel-container">
                        <div class="carousel-content">
                            <h2 class="animate__animated"><span>Delicious</span> Restaurant</h2>
                            <p class="animate__animated ">
                                Ut velit est quam dolor ad a aliquid qui aliquid. Sequi ea ut et est quaerat sequi nihil ut aliquam. Occaecati alias dolorem mollitia ut. Similique ea voluptatem. Esse doloremque accusamus repellendus deleniti vel. Minus
                                et tempore modi architecto.
                            </p>
                            <div>
                                <a asp-area="" asp-controller="Menus" asp-action="Index" class="btn-menu animate__animated scrollto">Our Menu</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hero -->

<main id="main">
   

    <!-- ======= Chefs Section ======= -->
    <section id="chefs" class="chefs">
        <div class="container">
        
            <div class="section-title">
                <h2>Our Proffesional <span>Chefs</span></h2>
                <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
            </div>

            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="member">
                            <div class="pic"><img src="~/images/@Html.DisplayFor(modelItem => item.Image)" class="img-fluid" alt=""></div>
                            <div class="member-info">
                                <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                                <span>@Html.DisplayFor(modelItem => item.Description)</span>
                            </div>
                        </div>
                    </div>
                }



            </div>

        </div>
    </section>
   
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
                <h2><span>Find</span> Us</h2>
                <p>Ut possimus qui ut temporibus culpa velit eveniet modi omnis est adipisci expedita at voluptas atque vitae autem.</p>
            </div>
        </div>

        <div class="map">
            <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2467.7891919324957!2d21.152703987513522!3d42.646255251327524!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13549e8d5d607f25%3A0xa31dd05b21bd09de!2sUniversiteti%20p%C3%ABr%20Biznes%20dhe%20Teknologji!5e0!3m2!1sen!2s!4v1642812325996!5m2!1sen!2s"
                    frameborder="0" allowfullscreen></iframe>
        </div>

       
       
    </section>
    <!-- End Contact Section -->
</main>

