@model EOrderProject.Models.PikatEShitjes

@{
    ViewData["Title"] = "Details";
}

<!-- ======= Hero Section ======= -->
<section id="hero">

    <div class="carousel-container">
        <div class="carousel-content">

            <h2 class="animate__animated "><span>Details</span></h2>
            <div class="row bg-white p-5 rounded shadow-lg justify-content-start">

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["ErrorMessage"]
                    </div>
                }

                <div class="form-group mt-3">
                    <input asp-for="City" type="text" class="form-control" placeholder="City" readonly>
                    <span asp-validation-for="City" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                </div>

                <div class="form-group mt-3">
                    <textarea asp-for="Info" class="form-control" rows="5" placeholder="Info" readonly></textarea>
                    <span asp-validation-for="Info" class="text-danger text-left" style="justify-content: flex-start !important;" readonly></span>
                </div>

                <div class="form-group mt-3">
                    <input required asp-for="Image" accept="image/png,image/jpeg" type="file" class="form-control" name="ifile" readonly>
                    <span asp-validation-for="Image" class="text-danger text-left" style="justify-content: flex-start !important;" readonly></span>
                </div>

                <div class="form-group text-center mt-4">
                    @*
                    <a class="btn btn-outline-success" style="float: right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>*@

                    <a style="float: left !important;" asp-controller="PikatEShitjes" asp-action="Index" class="btn-cancel">Go Back</a>

                </div>
            </div>
        </div>
    </div>
</section>

