<!-- ======= Hero Section ======= -->
<section id="hero">
    @*<img src="~/assets/img/slide/dark-bg.jpg" class="img-responsive" />*@
    <div class="carousel-container">
        <div class="carousel-content">
            <h2 class="animate__animated animate__fadeInDown"><span>Edit</span> Item</h2>
            <div class="row bg-white p-5 rounded shadow-lg justify-content-start">
                <form asp-action="Edit" enctype="multipart/form-data">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mt-3">
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger text-left" style="text-align: left !important;"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="Price" type="text" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger text-left" style="justify-content: flex-start !important;"></span>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="Description" class="form-control" rows="5" placeholder="Ingredients"></textarea>
                        <span asp-validation-for="Description" class="text-danger text-left" style="justify-content: flex-start !important;"></span>
                    </div>
                    <div class="form-group mt-3">
                        <select asp-for="MenuCategory" asp-items="Html.GetEnumSelectList<MenuCategory>()" class="form-control" rows="5" placeholder="Ingredients"></select>
                        <span asp-validation-for="MenuCategory" class="text-danger text-left" style="justify-content: flex-start !important;"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input required asp-for="Image" accept="image/png,image/jpeg" type="file" class="form-control" name="ifile">
                        <span asp-validation-for="Image" class="text-danger text-left" style="justify-content: flex-start ;"></span>
                    </div>
                    <div class="form-group text-center mt-4">
                        <a style="float: left !important;" asp-controller="Menus" asp-action="Index" class="btn-cancel">Cancel</a>
                        <input style="float: right !important; " value="Edit" class="btn-block btn-add-new" type="submit">
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
<!-- End Hero -->
