
@model EOrderProject.Models.Menu

@{
    ViewData["Title"] = "Details";
}

        <!-- ======= Hero Section ======= -->
        <section id="hero">

            <div class="carousel-container">
                <div class="carousel-content">

                    <h2 class="animate__animated "><span>Details</span></h2>
                    <div class="row bg-white p-5 rounded shadow-lg justify-content-start">

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger text-center">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <div class="form-group mt-3">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name" readonly>
                            <span asp-validation-for="Name" class="text-danger text-left" style="text-align: left !important;" readonly></span>
                        </div>
                        <div class="form-group mt-3">
                            <input asp-for="Price" type="text" class="form-control" placeholder="Price" readonly>
                            <span asp-validation-for="Price" class="text-danger text-left" style="justify-content: flex-start !important;" readonly></span>
                        </div>
                        <div class="form-group mt-3">
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Ingredients" readonly></textarea>
                            <span asp-validation-for="Description" class="text-danger text-left" style="justify-content: flex-start !important;" readonly></span>
                        </div>
                        @*<div class="form-group mt-3">
                            <select asp-for="MenuCategory" asp-items="Html.GetEnumSelectList<MenuCategory>()" class="form-control" rows="5" placeholder="Ingredients"></select>
                            <span asp-validation-for="MenuCategory" class="text-danger text-left" style="justify-content: flex-start !important;"></span>
                        </div>*@
                        <div class="form-group mt-3">
                            <input required asp-for="Image" accept="image/png,image/jpeg" type="file" class="form-control" name="ifile" readonly>
                            <span asp-validation-for="Image" class="text-danger text-left" style="justify-content: flex-start !important;" readonly></span>
                        </div>
                       
                        <div class="form-group text-center mt-4">
                      @*
                            <a class="btn btn-outline-success" style="float: right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>*@
                       
                            <a style="float: left !important;" asp-controller="Menus" asp-action="Index" class="btn-cancel">Go Back</a>

                        </div>
                    </div>
                </div>
             </div>
        </section>

