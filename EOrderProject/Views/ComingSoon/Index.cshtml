            <form asp-action="Index" method="get">
                <div class="form-actions no-color " style="margin-left:27%">
                    <p>
                        Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-block" /> |
                        <a asp-action="Index">Back to Full List</a>
                    </p>
                </div>
            </form>
            @*filteri*@

            <div class="row px-4 mb-2 border">
                <div class="text-center px-0 ">

                    <div class="block py-" style="align-items:center"><a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Name</a></div>
                </div>
